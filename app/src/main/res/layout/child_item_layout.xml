<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/itemCardChild"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


           <LinearLayout
               android:layout_width="wrap_content"
               android:orientation="vertical"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="5dp"
                   android:layout_height="wrap_content"
                   android:id="@+id/halfLine1"
                   android:layout_marginStart="7dp"
                   android:background="@color/black"
                   android:orientation="vertical" />


               <LinearLayout
                   android:layout_width="5dp"
                   android:id="@+id/halfLine2"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="7dp"
                   android:background="@color/black"
                   android:orientation="vertical" />
           </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/v"
                    android:layout_width="12dp"
                    android:layout_height="5dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="0dp"
                    android:layout_toEndOf="@id/v"
                    android:background="@color/black"
                    android:orientation="vertical"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/v"
                    android:id="@+id/ly1"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="0dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:background="#9c3644"
                        android:orientation="vertical" />

                    <RelativeLayout
                        android:id="@+id/parent_title_text_view_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4">

                        <ImageView
                            android:id="@+id/ivExpandedRoot"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/baseline_add_24" />

                        <TextView
                            android:id="@+id/parentTitleTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toEndOf="@id/ivExpandedRoot"
                            android:text="Items are jdjhs gjkh gasdkhg shdhgh jhgdj hgjhgfdjh gdjfgnvdj vjdhj jhbdjh gjgjgdjgjg djgjdf jdjfgjh gdjfgjg here"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/root_new_page_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:background="#DFDFDF"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivClick"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/more_icon" />

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvParent"
                tools:listitem="@layout/grand_child_item_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp" />

        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/view2"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:visibility="gone"
            android:background="@color/black"
            android:orientation="vertical" />




    </LinearLayout>


</LinearLayout>
